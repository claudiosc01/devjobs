<main class="lista-candidatos">
    <h2>Lista de Candidatos</h2>
    {{#if candidatos.length}}
        {{#each candidatos}}
            <div class="candidato">

                <div class="caja">
                    <p class="etiqueta">Nombre:</p>
                    <p class="nombre">{{nombre}}</p>
                </div>


                <div class="caja">
                    <p class="etiqueta">E-mail:</p>
                    <p class="nombre">{{nombre}}</p>
                </div>

                <div class="caja">
                    <div class="candidato">
                        <a href="/uploads/cv/{{cv}}" class="btn btn-verde" target="_blank">Ver CV</a>
                    </div>
                </div>
            </div>

        {{/each}}

    {{else}}
        <p>No hay Candidatos aun</p>
    {{/if}}
</main>